import java.util.Scanner;
public class Main {
    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);
        int n = input.nextInt();
        int X=0;
        for(int i = 0; i< n; i++){
            String str = input.next();
            if(str.charAt(1) == '+'){
                X++;
            }
            else{
                X--;
            }
        }
        System.out.println(X);
    }
}
